{
  "name": "the-monochord",
  "version": "1.0.0",
  "description": "This is the backend and frontend code for the microtonal web app [The Monochord](http://the-monochord.com)",
  "main": "app/js/index.js",
  "scripts": {
    "start": "npm run app",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel build:watch app:local:watch",
    "dev:production": "npm-run-all --parallel build:watch app:local:watch",
    "test": "npm-run-all lint:*",
    "app": "node app/js/server.min.js",
    "app:watch": "nodemon app/js/server.min.js --watch app --watch i18n --watch views --watch static-cdn -e js,ejs,json,css",
    "app:local": "npm run app -- --local",
    "app:local:watch": "npm run app:watch -- --local",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "lint:backend": "eslint \"src/server/**/*.{js,jsx}\"",
    "lint:frontend": "eslint \"src/client/js/**/*.{js,jsx}\"",
    "lint:style": "stylelint \"src/client/scss/**/*.scss\"",
    "lint:ejs": "ejslint views/pages/index.ejs",
    "commit": "git-cz",
    "commit:again": "git-cz --retry",
    "pack-resources-for-ec2": "pack-zip",
    "ssh": "ssh -i '~/.ssh/the-monochord-ec2-key.pem' ec2-user@ec2-18-224-93-16.us-east-2.compute.amazonaws.com",
    "lint:staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-monochord/the-monochord.com.git"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix"
    ],
    "src/**/*.scss": [
      "stylelint --fix"
    ]
  },
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/the-monochord/the-monochord.com/issues"
  },
  "homepage": "https://github.com/the-monochord/the-monochord.com#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-minify-html-2": "^1.0.1",
    "express-session": "^1.17.0",
    "express-winston": "^4.0.2",
    "greenlock-express": "^4.0.3",
    "i18n": "^0.8.4",
    "moment": "^2.24.0",
    "ramda": "^0.26.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "regenerator-runtime": "^0.13.5",
    "session-file-store": "^1.3.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/register": "^7.8.3",
    "angular": "^1.7.9",
    "angular-sanitize": "^1.7.9",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "codemirror": "^5.50.2",
    "cross-env": "^6.0.3",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.0.2",
    "ejs-lint": "^1.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-standard": "^4.0.1",
    "eventemitter3": "^4.0.0",
    "lint-staged": "^10.2.9",
    "mini-css-extract-plugin": "^0.9.0",
    "monochord-core": "^5.5.1",
    "node-sass-chokidar": "^1.4.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "pack-zip": "^0.2.2",
    "postcss-loader": "^3.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "prettier-config-standard": "^1.0.1",
    "reload": "^3.0.4",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-scss": "^3.13.0",
    "terser-webpack-plugin": "^3.0.3",
    "virtual-webaudio": "^0.21.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "pre-commit": [
    "lint:staged"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
