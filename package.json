{
  "name": "the-monochord",
  "version": "1.0.0",
  "description": "This is the backend and frontend code for the microtonal web app [The Monochord](http://the-monochord.com)",
  "main": "dist/server/js/index.js",
  "scripts": {
    "start": "npm run app",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel build:watch app:local:watch",
    "dev:production": "npm-run-all --parallel build:watch app:local:watch",
    "test": "npm-run-all lint:*",
    "app": "node dist/server/js/server.min.js",
    "app:watch": "nodemon dist/server/js/server.min.js --watch dist --watch i18n --watch views --watch static-cdn -e js,ejs,json,css",
    "app:local": "npm run app -- --local",
    "app:local:watch": "npm run app:watch -- --local",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "lint:js": "eslint \"src/**/*.{js,jsx}\"",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:ejs": "ejslint views/pages/index.ejs",
    "commit": "git-cz",
    "commit:again": "git-cz --retry",
    "pack-resources-for-ec2": "pack-zip",
    "ssh": "ssh -i '~/.ssh/the-monochord-ec2-key.pem' ec2-user@ec2-18-224-93-16.us-east-2.compute.amazonaws.com",
    "lint:staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-monochord/the-monochord.com.git"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix"
    ],
    "src/**/*.scss": [
      "stylelint --fix"
    ]
  },
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/the-monochord/the-monochord.com/issues"
  },
  "homepage": "https://github.com/the-monochord/the-monochord.com#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-minify-html-2": "^1.0.1",
    "express-session": "^1.17.1",
    "express-winston": "^4.0.5",
    "greenlock-express": "^4.0.3",
    "i18n": "^0.13.2",
    "moment": "^2.27.0",
    "ramda": "^0.27.1",
    "ramda-adjunct": "^2.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "regenerator-runtime": "^0.13.7",
    "session-file-store": "^1.4.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.11.5",
    "angular": "^1.8.0",
    "angular-sanitize": "^1.8.0",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "codemirror": "^5.57.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.2",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.3.0",
    "ejs-lint": "^1.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-standard": "^4.0.1",
    "eventemitter3": "^4.0.7",
    "lint-staged": "^10.2.13",
    "mini-css-extract-plugin": "^0.11.0",
    "monochord-core": "^5.5.1",
    "node-sass-chokidar": "^1.5.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "pack-zip": "^0.2.2",
    "postcss-loader": "^3.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.1",
    "prettier-config-standard": "^1.0.1",
    "reload": "^3.1.0",
    "sass-loader": "^10.0.1",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "terser-webpack-plugin": "^4.1.0",
    "virtual-webaudio": "^0.21.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2"
  },
  "pre-commit": [
    "lint:staged"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
